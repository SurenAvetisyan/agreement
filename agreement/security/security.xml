<odoo>

    <record id="group_agreement_employee" model="res.groups">
        <field name="name">Agreement: Employee</field>
    </record>

    <record id="group_agreement_manager" model="res.groups">
        <field name="name">Agreement: Manger</field>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <record model="ir.model.access" id="access_agreement_employee">
        <field name="name">access agreement employee</field>
        <field name="model_id" ref="agreement.model_agreement_types"/>
        <field name="group_id" ref="agreement.group_agreement_employee"/>
        <field name="perm_read">1</field>
        <field name="perm_write">0</field>
        <field name="perm_create">0</field>
        <field name="perm_unlink">0</field>
    </record>

    <record model="ir.model.access" id="access_agreement_manager">
        <field name="name">access agreement manager</field>
        <field name="model_id" ref="agreement.model_agreement_types"/>
        <field name="group_id" ref="agreement.group_agreement_manager"/>
        <field name="perm_read">1</field>
        <field name="perm_write">1</field>
        <field name="perm_create">1</field>
        <field name="perm_unlink">1</field>
    </record>

</odoo>

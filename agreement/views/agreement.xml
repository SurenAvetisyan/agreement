<odoo>

    <record id="agreement_tree" model="ir.ui.view">
        <field name="name">Contract tree</field>
        <field name="model">agreement</field>
        <field name="arch" type="xml">
            <tree string="Contract">
                <field name="number"/>
                <field name="partner_id"/>
                <field name="kind_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="author_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="agreement_form" model="ir.ui.view">
        <field name="name">Contract form</field>
        <field name="model">agreement</field>
        <field name="arch" type="xml">
            <form string="Contract">
                <header>
                    <button attrs="{'invisible': [('state', '!=', 'draft')]}" name="to_approval" string="Send for approval" type="object" class="oe_highlight"/>
                    <button attrs="{'invisible': [('state', '!=', 'in_progress')]}" groups="agreement.group_agreement_manager" name="approve" string="To approve" type="object" class="oe_highlight"/>
                    <button attrs="{'invisible': [('state', '!=', 'active')]}" groups="agreement.group_agreement_manager" name="to_revision" string="Submit for revision" type="object" class="oe_highlight"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="number" readonly="1"/>
                            <field name="partner_id"
                                   attrs="{'readonly': [('state', 'in', ('in_progress', 'active', 'completed'))]}"/>
                            <field name="kind_id"
                                   attrs="{'readonly': [('state', 'in', ('in_progress', 'active', 'completed'))]}"/>
                        </group>
                        <group>
                            <field name="start_date"
                                   attrs="{'readonly': [('state', 'in', ('in_progress', 'active', 'completed'))]}"/>
                            <field name="end_date"
                                   attrs="{'readonly': [('state', 'in', ('in_progress', 'active', 'completed'))]}"/>
                            <field name="author_id"
                                   attrs="{'readonly': [('state', 'in', ('in_progress', 'active', 'completed'))]}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="agreement_action" model="ir.actions.act_window">
        <field name="name">Contract</field>
        <field name="res_model">agreement</field>
        <field name="view_mode">tree,form</field>
    </record>


</odoo>

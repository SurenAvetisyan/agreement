<odoo>
    <record id="mail_template_agreement_mail" model="mail.template">
        <field name="name">Agreement Mail</field>
        <field name="model_id" ref="agreement.model_agreement"/>
        <field name="subject">Договор для {{ object.partner_id.name }}</field>
        <field name="partner_to">{{ object.author_id.partner_id != False and object.author_id.partner_id.id }}</field>
        <field name="email_to">{{ (not object.author_id.partner_id and object.email_from) }}</field>
        <field name="body_html" type="html">
            <span>Договор</span>
            <span t-out="object.number or ''"/>
            <span>отправлен на доработку !</span>
        </field>
        <field name="lang">{{ object.partner_id.lang }}</field>
        <field name="auto_delete" eval="True"/>
    </record>
</odoo>
